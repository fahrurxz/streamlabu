{
  "name": "live-streaming-platform",
  "version": "1.0.0",
  "description": "Multi-platform live streaming application",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "init-dev": "node scripts/init-dev-db.js",
    "dev-full": "npm run init-dev && npm run dev",
    "pm2:all": "concurrently \"npm run pm2:backend\" \"npm run pm2:frontend\"",
    "pm2:backend": "pm2 start app.js --name livestream-backend",
    "pm2:frontend": "cd frontend && pm2 start npm --name livestream-frontend -- run start"
  },
  "keywords": [
    "livestream",
    "video",
    "multi-platform"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.2.0",
    "node-media-server": "^2.5.0",
    "sequelize": "^6.30.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22"
  }
}